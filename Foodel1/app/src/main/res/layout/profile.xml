<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pavel.foodel1.Profile"
    android:background="@drawable/wood"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/profileLayout">
        <TextView
            android:text="Change profile"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textSize="20dp"/>
        />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/fontColor"
                android:textSize="20dp"
                android:textColorHint="@color/fontColor"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp"
                android:id="@+id/profileEmail" />

            <EditText
                android:hint="Name"
                android:singleLine="true"
                android:inputType="textCapWords"
                android:layout_width="match_parent"
                android:textColor="@color/fontColor"
                android:textSize="20dp"
                android:textColorHint="@color/fontColor"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileEmail"
                android:layout_alignStart="@+id/profileEmail"
                android:layout_marginTop="30dp"
                android:id="@+id/profileName" />

            <EditText
                android:hint="Surname"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:textColor="@color/fontColor"
                android:inputType="textCapWords"
                android:textSize="20dp"
                android:textColorHint="@color/fontColor"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileName"
                android:layout_alignStart="@+id/profileName"
                android:layout_marginTop="30dp"
                android:id="@+id/profileSurname" />

            <EditText
                android:hint="City"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textColor="@color/fontColor"
                android:textColorHint="@color/fontColor"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileSurname"
                android:layout_alignStart="@+id/profileSurname"
                android:layout_marginTop="30dp"
                android:id="@+id/profileCity" />

            <EditText
                android:hint="Address"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textColor="@color/fontColor"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textColorHint="@color/fontColor"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileCity"
                android:layout_alignStart="@+id/profileCity"
                android:layout_marginTop="30dp"
                android:id="@+id/profileAddress" />

            <EditText
                android:hint="@string/repeat_password"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:fontFamily="sans-serif"
                android:textColor="@color/fontColor"
                android:textSize="20dp"
                android:textColorHint="@color/fontColor"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profilePassword"
                android:layout_alignStart="@+id/profilePassword"
                android:layout_marginTop="30dp"
                android:id="@+id/profileCheckPassword" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                style="?android:textAppearanceSmall"
                android:id="@+id/profileButton"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
