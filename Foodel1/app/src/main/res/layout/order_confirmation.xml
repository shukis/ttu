<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pavel.foodel1.OrderConfirmation"
    android:background="@drawable/wood"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:id="@+id/orderTotalSum"
        android:text="Total to pay: 0â‚¬"/>
        <Button
            android:layout_width="match_parent"
            android:layout_weight="2"
            style="?android:textAppearanceSmall"
            android:layout_height="wrap_content"
            android:id="@+id/orderReset"
            android:text="Reset"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="7dp"
        android:id="@+id/separator"
        android:visibility="visible"
        android:background="@color/fontColor"/>
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@color/fontColor"
        android:dividerHeight="1dp">
    </ListView>

    <Button
        android:layout_gravity="center"
        android:text="Payment"
        style="?android:textAppearanceSmall"
        android:layout_width="250dp"
        android:layout_height="58dp"
        android:textStyle="bold"
        android:id="@+id/orderPayment" />


</LinearLayout>
