<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/moon_main_course"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pavel.foodel1.moon.MoonMainCourse"
    android:background="@drawable/wood"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:text="@string/main_course"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/moonMainCourse"
        android:textSize="20dp"
        android:layout_weight="0.10"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.50">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:text="@string/l_he_mee_sinepiglasuuri_rdipannkoogi_rohelise_herne_ning_munasalatiga_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/fontColor"
                android:layout_marginTop="10dp"
                android:id="@+id/moonMainCourse1" />

            <CheckBox
                android:text="@string/siig_praetud_lehtkapsa_maapirnikreemi_ja_homaariv_iga_17"
                android:layout_width="match_parent"
                android:textColor="@color/fontColor"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/moonMainCourse2" />

            <CheckBox
                android:text="@string/vege_rukkiburger_kikerherne_kinoa_peedikotleti_ja_tomatimarmelaadiga_10"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:textColor="@color/fontColor"
                android:layout_height="wrap_content"
                android:id="@+id/moonMainCourse3" />

            <CheckBox
                android:text="@string/kana_la_kiev_kartulip_ree_noore_spinati_ja_granaat_una_salatiga_13"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:textColor="@color/fontColor"
                android:id="@+id/moonMainCourse4" />

            <CheckBox
                android:text="@string/pardirind_muskaatk_rvitsa_orsoto_ja_portveinikastmega_14"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:textColor="@color/fontColor"
                android:layout_height="wrap_content"
                android:id="@+id/moonMainCourse5" />

            <CheckBox
                android:text="@string/hirve_strooganov_kukeseente_ja_kartulikreemiga_18"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:textColor="@color/fontColor"
                android:layout_height="wrap_content"
                android:id="@+id/moonMainCourse6" />

            <CheckBox
                android:text="@string/veisefilee_kartulivahvli_sibulamarmelaadi_ja_punaseveinikastmega_20"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/fontColor"
                android:id="@+id/moonMainCourse7" />




        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.16">

            <Button
                android:text="@string/starters"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMainMoonStarters" />
            <Button
                android:text="@string/desserts"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMainMoonDesserts" />
            <Button
                android:text="@string/confirm"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMainMoonPay" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
