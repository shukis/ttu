<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/delete_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.pavel.foodel1.DeleteProfile"
    android:background="@drawable/wood">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deleteEmail"
        android:text="ok"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:textSize="22dp"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:background="@color/fontColor"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="If you are sure you want to delete your account, then insert your password"/>
    <EditText
        android:singleLine="true"
        android:hint="@string/password"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textColor="@color/fontColor"
        android:textSize="22dp"
        android:textColorHint="@color/fontColor"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/deletePassword" />

    <Button
        android:text="Delete account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/deleteButton"
        style="?android:textAppearanceSmall"
        android:gravity="center"
        android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
